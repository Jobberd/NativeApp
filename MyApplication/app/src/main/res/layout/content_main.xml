<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.job94_000.myapplication.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to your Dashboard!"
        android:id="@+id/textWelcome"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="Phone"
        android:id="@+id/buttonPhone"
        android:layout_below="@+id/textWelcome"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="Messages"
        android:id="@+id/buttonMessages"
        android:layout_alignTop="@+id/buttonPhone"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="Mail"
        android:id="@+id/buttonMail"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="Maps"
        android:id="@+id/buttonMaps"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/buttonMail"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/imageView"
        android:src="@drawable/phone"
        android:adjustViewBounds="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/buttonPhone"
        android:layout_alignStart="@+id/buttonPhone" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/buttonMessages"
        android:layout_alignStart="@+id/buttonMessages"
        android:focusableInTouchMode="false"
        android:src="@drawable/message" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/imageView4"
        android:layout_below="@+id/buttonMail"
        android:layout_alignStart="@+id/buttonMail"
        android:src="@drawable/mail" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/buttonMaps"
        android:layout_alignStart="@+id/buttonMaps"
        android:src="@drawable/maps" />

    Button
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="Mail"
        android:id="@+id/button"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/buttonMail"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
